{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "ep",
  "permission": {
    "read": "allow",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "task": "allow",

    "edit": "ask",
    "webfetch": "ask",

    "bash": {
      "*": "ask",

      "npm *": "allow",
      "npx *": "allow",

      "node scripts/check-rls-status.ts*": "allow",
      "node scripts/diagnose-rls.ts*": "allow",
      "node scripts/test-login-flow.ts*": "allow",
      "node scripts/verify-users-exist.ts*": "allow",

      "git status*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git show*": "allow",
      "git rev-parse*": "allow",
      "git branch*": "allow",

      "git checkout *": "ask",
      "git commit *": "ask",
      "git push *": "deny",

      "rm *": "deny",
      "sudo *": "deny",
      "chmod 777 *": "deny"
    }
  }
}
